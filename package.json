{
  "name": "Avocat",
  "main": "public/electron.js",
  "version": "0.1.0",
  "homepage": "./",
  "dependencies": {
    "@hookform/error-message": "^2.0.0",
    "@popperjs/core": "^2.10.1",
    "@syncfusion/ej2-react-filemanager": "^19.4.56",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "animation.css": "^0.1.0",
    "axios": "^0.21.4",
    "bootstrap": "^5.1.1",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0-rc.0",
    "react-data-table-component": "^7.3.1",
    "react-dom": "^17.0.2",
    "react-epic-spinners": "^0.5.0",
    "react-hook-form": "^7.16.2",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.3.1",
    "sweetalert2": "^11.1.7",
    "web-vitals": "^1.0.1"
  },
  "proxy": "https://avocatapp.herokuapp.com",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"SET BROWSER=none && npm run start\" \"wait-on tcp:3000 && electron .\"",
    "electron": "wait-on tcp:3000 && electron .",
    "build-installer": "yarn build && electron-builder -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.2",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "Avocat",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "installerIcon": "src/icon.ico",
      "uninstallerIcon": "src/icon.ico",
      "uninstallDisplayName": "Avocat",
      "license": "LICENSE.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
